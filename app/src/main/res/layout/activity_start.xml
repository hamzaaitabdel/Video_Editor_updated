    <ImageView
        android:id="@+id/imgNewCam"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:layout_below="@+id/txtNewCam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:src="@drawable/ic_splash_music_video" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imgNewCam"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_like_followers"
        android:text="START"
        android:textColor="@color/gray100"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLikes"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btnStart"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_like_followers"
        android:gravity="center"
        android:text="@string/likes_followers"
        android:textColor="@color/gray100"
        android:textSize="12dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="20dp"
        android:text="Privacy Policy"
        android:textColor="@android:color/white" />
</LinearLayout>
