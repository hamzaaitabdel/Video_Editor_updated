<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/rllSuccessful" android:background="@drawable/custom_image_2" android:layout_width="240dp" android:layout_height="wrap_content" android:layout_centerHorizontal="true">
        <ImageView android:id="@+id/imgBack" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginTop="20dp" android:src="@drawable/ic_done_black_24dp" android:layout_centerHorizontal="true"/>
        <TextView android:textStyle="bold" android:textColor="@color/gray100" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hashtags copied Successful" android:layout_below="@+id/imgBack" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="240dp" android:layout_height="150dp" android:layout_below="@+id/rllSuccessful" android:layout_centerHorizontal="true">
        <TextView android:textSize="13dp" android:textStyle="bold" android:gravity="center" android:id="@+id/txtStep2" android:layout_width="180dp" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="Step 2 : past Hashtags in your post" android:layout_centerHorizontal="true"/>
        <Button android:textStyle="bold" android:textColor="@color/gray100" android:id="@+id/btnDone" android:background="@drawable/custom_button" android:layout_width="100dp" android:layout_height="30dp" android:layout_marginTop="40dp" android:text="DONE" android:layout_below="@+id/txtStep2" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
