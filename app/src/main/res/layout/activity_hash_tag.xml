<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.activities.HashTagActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/rllHashTag"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_hashtag"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgPose"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_people" />

                <TextView
                    android:id="@+id/txtCongratulations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgPose"
                    android:layout_marginTop="4dp"
                    android:text="Congratulations!"
                    android:textColor="@color/gray100" />

                <TextView
                    android:id="@+id/txtHashtag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgPose"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="4dp"
                    android:text="10K Followers"
                    android:textColor="@color/gray100" />

                <TextView
                    android:id="@+id/txtbeen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCongratulations"
                    android:text="Hashtags has been generated"
                    android:textColor="@color/gray100" />

                <TextView
                    android:id="@+id/txtStep1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtbeen"
                    android:text="Step1 : copy Hashtag"
                    android:textColor="@color/gray100" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvHashTag"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rllHashTag"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:padding="5dp">

                <TextView
                    android:id="@+id/htvHashtag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/gray700" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnCopy"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_below="@+id/cvHashTag"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_hashtag"
                android:text="COPY"
                android:textColor="@color/gray100" />

        </RelativeLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp">
        <TextView
            android:id="@+id/txtMessageAds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_centerInParent="true"
            android:layout_gravity="center"

            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Advertisement"
            android:textSize="12dp" />
        <FrameLayout
            android:id="@+id/ad_native"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:orientation="vertical">
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>